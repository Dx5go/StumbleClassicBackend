# Application
APP_NAME=UnityGameBackend
BACKEND_VERSION=v1
NODE_ENV=development
PORT=8080

# Database
MONGO_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/?retryWrites=true&w=majority
MONGO_DB_NAME=unity_game_backend

# Secrets (generate fresh values, e.g. `openssl rand -hex 32`)
API_SECRET=change-me-api-secret
JWT_SECRET=change-me-jwt-secret
LEAGUE_SALT=change-me-league-salt
LEAGUE_LOGIN_SALT=change-me-league-login-salt
LOGIN_SALT=change-me-login-salt
SALT=change-me-shared-salt

# Shared data/meta
SHARED_VERSION=LIVE
SHARED_TYPE=DEFAULT
BACKEND_PUBLIC_URL=https://your-backend.onrender.com
FRONTEND_PUBLIC_URL=https://your-frontend.example.com

# Safety toggle for shared data seeding on boot
SEED_SHARED_DATA=true
